use os;
use uo;

include ":gumps:gumps";

program textcmd_where(who)
    if(who.cmdlevel > 1)
        SendSysMessage( who, "You are here: " +  who.realm, color := 88 );
    endif

    var gump := GFCreateGump(100,100);
    GFPage(gump, 0);
	GFGumpPic(gump, 100, 100, 100, 0);
    GFTextLine (gump, 130, 120, 20, "X "+who.x );
    GFTextLine (gump, 130, 140, 20, "Y "+who.y );
    GFTextLine (gump, 130, 160, 20, "Z "+who.z );
    GFSendGump(who, gump);
endprogram