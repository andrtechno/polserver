use os;
use uo;
use PolSys;

include "include/client";

program textcmd_unload( who, scriptname )

    var unload := Unload_Scripts(scriptname);
    ReloadConfiguration();
    if(scriptname == "")
        SendSysMessage(who, "Unloaded "+unload+" scripts.", 3, MESSAGE_COLOR_GOOD);
    else
        SendSysMessage(who, "Unloaded: "+scriptname+" script.", 3, MESSAGE_COLOR_GOOD);
    endif
endprogram