use uo;
use os;

include "include/client";

program ControlScript(cuthair)
    var owner := cuthair.character_owner;

    if(owner)
        foreach layer_id in {LAYER_HAIR, LAYER_BEARD}
            var item := GetEquipmentByLayer(owner, layer_id);
            if(item)
                DestroyItem(item);
            endif
        endforeach
        DestroyItem(cuthair);
    endif
	return 1;
endprogram
