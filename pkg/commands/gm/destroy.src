use uo;

program textcmd_destroy( who )
	SendSysMessage( who, "Please target something to destroy.");
	var tgt := Target( who );
	if(!tgt)
		SendSysMessage(who, "Cancelled.", 1, 33);
		return 0;
	endif
	if(GetObjProperty(tgt, "Permanent"))
		SendSysMessage(who, "That item cannot be destroyed.");
		return 0;
	endif
	if(!tgt.isA(POLCLASS_NPC) || !tgt.client)
		DestroyItem( tgt);
	else
	SendSysMessage( who, "You can only destroy items");
	endif
endprogram