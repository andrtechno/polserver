//
// Destroy an item even if marked by "Permanent" CProp
//

use uo;

program textcmd_udestroyRadius(who, text)
    var trg, range, stuff;
    if (!text)
        range := 0;
    endif
    range := CInt(text);
    if (range < 0 or range > 10)
        SendSysMessage (who, "The range you specified is out of bounds. Defaulting to single item destroy mode.", color := 33);
        range := 0;
    endif
    while(1)
		trg := Target(who, 0);
		if(!trg)
			break;
		endif
		if (!range)
				DestroyItem( trg );
		else
			stuff := ListItemsNearLocation(trg.x, trg.y, trg.z, range, trg.realm );
			foreach thing in stuff
				DestroyItem( thing );
			endforeach
		endif
    
    endwhile
endprogram